# Point the app at your local backend (required for "Send notification").
# iOS simulator: use http://localhost:3000
# Physical device / Android: use your machine's LAN IP, e.g. http://192.168.1.100:3000
EXPO_PUBLIC_API_URL=http://localhost:3000

# Optional: for Google Sign-In in the app (if you add OAuth). Backend uses its own GOOGLE_* in backend/.env.
# EXPO_PUBLIC_GOOGLE_CLIENT_ID=
# EXPO_PUBLIC_GOOGLE_CLIENT_SECRET=

EXPO_PUBLIC_MAIL_CLIENT_ID=
EXPO_PUBLIC_MAIL_CLIENT_SECRET=
EXPO_PUBLIC_MAIL_REFRESH_TOKEN=


# Google access token for calendar/priming (copy value from backend .env GOOGLE_ACCESS_TOKEN)
EXPO_PUBLIC_GOOGLE_ACCESS_TOKEN=

# Convex backend URL (set automatically when you run `npm run convex`)
# Copy from .env.local after running `npx convex dev` once
EXPO_PUBLIC_CONVEX_URL=https://helpful-cuttlefish-123.convex.cloud/
